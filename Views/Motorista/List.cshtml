@model IEnumerable<GradeHoraria_.Models.Motorista>

@{
    var successMessage = ViewBag.SuccessMessage;
}
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script>
            toastr.success("@successMessage")
        </script>
    }
<section class="mx-auto col-lg-10 col-md-10 col-sm-11 d-flex">
    <div class="card w-100">
        <div class="card-header d-flex align-items-center justify-content-between px-4 py-4">
            <h2 class="my-0">Motoristas</h2>
            <p class="ml-auto mb-0">
                @Html.ActionLink("Cadastrar novo", "Create", null, new { @class = "btn btn-primary" })
            </p>
        </div>
        <div class="card-body">
            <table class="table table-striped table-responsive table-bordered">
                <tr>
                    <th class="bg-dark text-white">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th class="bg-dark text-white">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th class="bg-dark text-white">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="bg-dark text-white">
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>
                    <th class="bg-dark text-white"></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                            @*@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |*@
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>